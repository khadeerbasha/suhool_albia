<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
        <record id="view_picking_form_slip_ref" model="ir.ui.view">
            <field name="name">stock.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="slip_ref"/>
                    <field name="sale_id" invisible="1"/>
                    <field name="analytic_account_id"/>
                </field>
                
                <xpath expr="//field[@name='move_ids_without_package']/form/group/field[@name='product_uom_qty']" position="after">
                    <field name="bales"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']" position="after">
                    <field name="bales"/>
                    <field name="analytic_account_id"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_account_payment_form_ref" model="ir.ui.view">
            <field name="name">account.payment.inherit.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="pay_ref"/>
                    
                </field>
            </field>
        </record>
        
        <record id="view_account_payment_register_form_ref" model="ir.ui.view">
            <field name="name">account.payment.register.inherit.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form" />
            <field name="arch" type="xml">
                <field name="communication" position="after">
                    <field name="pay_ref"/>
                </field>
            </field>
        </record>
        
        <record id="purchase_order_form_bales" model="ir.ui.view">
            <field name="name">purchase.order.inherit.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <field name="product_qty" position="after">
                    <field name="bales"/>
                </field>
            </field>
        </record>
        
        <record id="view_order_form_bales" model="ir.ui.view">
            <field name="name">sale.order.line.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form//label[@for='qty_delivered']" position="before">
                    <field name="bales"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                    <field name="bales"/>
                </xpath>
            </field>
        </record>
        
        <record id="purchase_order_form_bales" model="ir.ui.view">
            <field name="name">purchase.order.inherit.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='qty_received_method']" position="after">
                    <field name="bales"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_qty']" position="after">
                    <field name="bales"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_move_form_bales" model="ir.ui.view">
            <field name="name">account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group/field[@name='quantity']" position="after">
                    <field name="bales"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="after">
                    <field name="bales"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>


